<p id="notice"><%= notice %></p>

<h1><%= t(:LISTING_PAGES_GROUP) %></h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages_groups.each do |pages_group| %>
      <tr>
        <td><%= link_to t(:show), pages_group %></td>
        <td><%= link_to t(:edit), edit_pages_group_path(pages_group) %></td>
        <td><%= link_to t(:destroy), pages_group, method: :delete, data: { confirm: t(:ARE_YOU_SURE) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

