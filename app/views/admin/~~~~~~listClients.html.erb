

<div class="row">
   <div class="col-sm-12">
      <div class="panel panel-default">
         <div class="panel-heading">
            <h3 class="panel-title">Manage Clients
               <span class="pull-right"> 
               <%= link_to "Back", :back %>
               </span>
               <span class="pull-right"> 
               <%= link_to 'Create new client', '/admin/clients/new', :class =>'addUser' %>
               </span>
            </h3>
         </div>
         <div class="panel-body">
            <p id="notice"><%= notice %></p>
            <% if @clients.size > 0 %>
            <div class="listing-microsite">
               <ul class="">
                  <% @clients.each do |client| %>
                  <li class="micro-site-item">
                     <div class="clear-both microdetail-clis">
                        <div class="microlink">
                           <div class="mi-image-mlink">
                              <div class="cntrol-item">
                              <% if client.logo.present? && client.logo.url != nil %>
                                    <%= image_tag client.logo.url, :style => "max-width:100%" %> 
                              <% else %>      
                              <%= image_tag(image_path("default-client-logo.png")) %>
                              <% end %>
                              </div>
                           </div>
                         <div class="clear-both microdetail">
                              <div class="microlink">    
                                 <%= client.name %>  
                              </div>
                              <div class="micro-permission">
                                 <% if current_user.can? :showClient, :admin  %> 
                                 <a href="/client/<%= client.id %>">View</a>
                                 <% end %>  
                                 <% if current_user.can? :editUser, :admin  %> 
                                 <a href="/admin/clients/<%= client.id %>/edit">Edit</a>
                                 <% end %>  
                              </div>
                              
                           </div>
                        </div>
                     </div>
                  </li>
                  <% end %>
               </ul>
            </div>
            <% else %>
            <p>No Client</p>
            <% end %>
         </div>
      </div>
   </div>
</div>
 

