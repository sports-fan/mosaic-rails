

   <div class="panel-body">
                               <p id="notice"><%= notice %></p>          
                                        <%= form_for @survey, html: { multipart: true, class: "form-horizontal"} do |f| %>
   <% if @survey.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('errors.messages.not_saved', count: @survey.errors.count, resource: t(:survey)) %></h2>

      <ul>
      <% @survey.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.hidden_field :user_id, :value =>  params[:client_id] %>

       <div class="form-group">
                                                <%= f.label :name, class: "col-md-2 control-label" %>
                                                <div class="col-md-10">
                                              <%= f.text_field :name, class: "form-control" %>
                                                </div>
                                              </div>

 <div class="form-group">
                                                <%= f.label :description, class: "col-md-2 control-label" %>
                                                <div class="col-md-10">
                                              <%= f.text_area :description, class: "form-control" %>
                                                </div>
                                              </div>



                                            <div class="form-group m-b-0">
                                                <div class="col-sm-offset-2 col-sm-10">
                                           <%= f.submit t(:Save) , :class=> "btn btn-info waves-effect waves-light" %> 

                                                </div>
                                            </div>

                           
                                       <% end %>

                                    </div> <!-- panel-body -->
                         
