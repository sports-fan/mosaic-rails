<% content_for :title, t(:ASSIGNING_GROUP_TO_TARGET, group_name: @group.name, target: t(:Microsites)) %>
<div class="row">
<div class="col-sm-12">
<div class="panel panel-default">

	<div class="panel-heading">
		<h3 class="panel-title"><label><%= t(:ASSIGNING_GROUP_TO_TARGET, group_name: @group.name, target: t(:Microsites)) %>
	</div>

	<div class="panel-body">

		 <div class="error-block">
		 	<% @errors.each do |e|    %>
		 		<p style="color:red"><%= raw(e) %></p>
		 	<% end %>
		 </div>
		 <div class="success-block">
		 	<% @success.each do |s|    %>
		 		<p style="color:green"><%= raw(s) %></p>
		 	<% end %>
		 </div>


		 <div class="form-wrapper">
			<%= form_for(@group, 
			:url=>"/microsites_groups/addexistingmicrositestogroups/#{@group.id}") do |f| %>	
				<%= hidden_field_tag(:task, "assign-group-to-microsites" ) %>
				<div class="search-pages">
				  <label><%= t("SEARCH_MICROSITE_ASSIGN_TO_GROUP") %></label>
				  <%= autocomplete_field_tag "microsites[]", "", autocomplete_microsite_title_microsites_path,
				  'data-delimiter' => ',', :multiple => true %>
				</div>
				<div class="submitbtn" style="margin: 10px 0 20px">
				    <%= button_tag(t(:Save), 
				      data: { 
				      disable_with: t(:PLEASE_WAIT),
				      confirm: t(:ARE_YOU_SURE) }, class:"btn btn-info waves-effect waves-light") %>
				</div>
			<% end %>
		</div>

		  <div class="avaliavle-cms-pages">
			  <div class="title">
			  		<label><%= t("ASSIGN_GROUP_TO_MICROSITE_MSG") %>:</label>
			  </div>

			  <% @microsites.each do |site| %>
			  <p><%= site.title  %></p>
			  <% end %>
		  </div>



	</div>

</div>
</div>
 <%= link_to t(:Back), "/groups/#{@group.id}" %>
</div>	