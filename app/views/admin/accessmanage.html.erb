







        <div class="row">
                            <div class="col-md-12">
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <h3 class="panel-title">Access Manage
<% if current_user.can? :addUser, :admin %>
<span class="pull-right"><%= link_to 'Add User', '/admin/addUser', :class =>'addUser' 	%></span>
<% end %> </h3>
                                    </div>
                                    <div class="panel-body">
                                        <div class="row">
                                          <p id="notice"><%= notice %></p>

                                            <div class="col-md-12 col-sm-12 col-xs-12">
                                                <div class="table-responsive">
                                                    <table class="table">
                                                  <tr>
		<th>First Name </th>
		<th>Last Name </th>
		<th>Email </th>
		<th>Update </th>
		<th>Delete </th>
	</tr>


<% @users.each do |user| %>
 
<tr>
		<td><%= user.first_name %></td>
		<td><%= user.last_name %></td>
		<td><%= user.email %></td>


		<td>
		<% if current_user.can? :editUser, :admin %>		
			<%= link_to 'Edit', '/admin/editUser/'+user.id.to_s, :class =>'editUser', :id=> user.id
		 	%>
		  <%  end %>			
		</td>
	
		<td>

	<% if current_user.can? :delUser, :admin %>

		<% if user.admin != true %>	
			<%= link_to 'Delete', '/admin/delUser/'+user.id.to_s, :class =>'delete-user', :id=> user.id
		 	%>
		 <%  end %>	

	<%  end %>		

		</td>
</tr>

<% end %>


</table>

                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div> <!-- End row -->
