<h1><%= t(:LISTING_MICROSITES_GROUPS) %></h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @microsites_groups.each do |microsites_group| %>
      <tr>
        <td><%= link_to t(:show), microsites_group %></td>
        <td><%= link_to t(:edit), edit_microsites_group_path(microsites_group) %></td>
        <td><%= link_to t(:destroy), microsites_group, method: :delete, data: { confirm: t(:ARE_YOU_SURE) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

