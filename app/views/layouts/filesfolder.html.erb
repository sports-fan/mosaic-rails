<html>
<head>
  <title>Mosaic</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag "style.css" %>
   <%= stylesheet_link_tag "devise/style.css" %>
   <%= stylesheet_link_tag "admin/style.css" %>
</head>
<body class="body <%= params[:controller]+'_'+params[:action] %> filefolders template-<%= params[:controller] %>">
<div class="wrapper">
	<div class="login-section">
		<div class="row">

			<div class="col-9">	
				
		<%= render "common/users/header" %>			

				 

			</div>

			<div class="col-3">
				<div class="user-controlles">
					<ul>
							<% if user_signed_in? %>
								<li>
		<%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> 
								</li>


								<li>
		<%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
								</li>
							<% end %>

					</ul>
				</div>
			</div>	
<div class="clear"></div>

<div class="message-block">
	<% if notice %>
	  <p class="alert alert-success"><%= notice %></p>
	<% end %>

					<%  if alert != nil && alert != true
						 	if alert.is_a?(Object) && !alert.is_a?(String)    %>
								<% alert.each do |error|   %>
							 		 <p class="alert alert-danger">
							 		 	<span claas="pre"><%= error[0] %></span>
							 		 	<% if error.size > 1 %>
							 		 		<span claas="post">
							 		 			<%= error[1][0] %>
							 		 		</span>
							 		 	<% end %>
							 		 </p>
							    <% end  
							else  %>

							<p class="alert alert-danger"><%= alert %></p>

						<%  end %>
						<%  end %>
						 




<div>	

<div class="clear"></div>	

		<div class="content">

			<div class="content-left">
						<%= render "common/users/links" %>	
					</div>

					<div class="content-right">
						<%= yield %>
					</div>


			
		</div>
			

		</div>
	</div>
	<div class="clr"></div>
</div><div class="clr"></div>
<div class="copy-right"><%= t("COPY_RIGHT_MSG") %></div>
<div class="clr"></div>
</body>
</html>
