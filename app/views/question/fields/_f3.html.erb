<div class="f3-block fields-option" >

	<div class="options-adv">
		<div class="row">
				<div class="col-md-6">
					<h4>Multiple Choice Options</h4>
				</div>
		</div>
	</div>

	<%#= section %>
	<%#= @question  %>	 

	<div class="questions-add-option">
		<ul> 
		<% if @question != nil %>

			<%  if @question.qfields != nil %>

				<%  @question.qfields.each_with_index do |field,k|  %>
					<li data-id="1" class="field-rem-<%= field.id.to_s %>">

						<%= text_field_tag('qoption[1]',field.fval, :placeholder => 'Option 1')  %>

						<%= link_to ' X ', '/qfield/delete/'+field.id.to_s, :class => 'remove_field qfield', 
							:role=>field.id,
							:onclick => "return remove_fileds(this)" %>
					</li>

				<%  end %>

			<%  end %>

		<% else %>

			<li data-id="1">

				<%= text_field_tag('qoption[1]','', :placeholder => 'Option 1')  %>
			</li>

			<li data-id="2">
				<%= text_field_tag('qoption[2]','', :placeholder => 'Option 2',
				'data-id'=>1)  %>
			</li>	

				 
		<% end %>

				

		</ul>


	</div>

	<div class="answer-grid-footer">

		<span class="add-option-textbox">
				<a class="add-option-button" 
				data-options-add-btn="" onclick="add_more_questions()" 
				href="javascript:void(0);">
				<i class="icon-plus text-muted"></i> Click to Add Option</a>
		</span>

	</div>	

	<!-- *********************8 -->

	<div class="col-md-4 hidden-xs advisor-column">	
		<div class="alert alert-info advisor">
			<div class="advisor-header">
				<a data-alertid="question-RADIO-radio" class="js-close-advice pull-right" type="button"><i class="icon-remove"></i></a>
				<i class="icon-info-sign"></i> 
				<strong>Getting Started Guide</strong> 
			</div>
			<div class="advisor-text">
				<p>
					<p>Dropdown Menus allow only one selection per question. If you want to allow for multiple selections, use Checkboxes instead.<br><br>Dropdown Menus are great for longer lists of options. If your list of options is short, consider using Radio Buttons instead.</p>
				</p>
				</div>
			</div>
		</div>
		<div class="clearfix"></div>

	</div>

	<!-- ************************ -->

</div>