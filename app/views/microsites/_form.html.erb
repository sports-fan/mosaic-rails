
<div class="panel-body">
   <p id="notice"><%= notice %></p>
   <%= form_for @microsite, :url => "/microsites/#{@microsite.id}", html: { multipart: true, class: "form-horizontal"} do |f| %>
   <% if params[:action] == "new" %>
   <%= f.hidden_field(:client_id, :value => params[:client_id])  %>
   <% elsif params[:action] == "create" %>
   <%= f.hidden_field(:client_id)  %>
   <% end %>
   <% if @microsite.errors.any? %>
   <div id="error_explanation"  class="col-sm-12">
      <h2>
         <%= pluralize(@microsite.errors.count, "error") %>
         prohibited this microsite from being saved:
      </h2>
      <ul>
         <% @microsite.errors.full_messages.each do |message| %>
         <li><%= message %></li>
         <% end %>
      </ul>
   </div>
   <% end %>
   <div class="form-group">
      <%= f.label :title, class: "col-md-2 control-label" %>
      <div class="col-md-10">
         <%= f.text_field :title, class: "form-control" %>
      </div>
   </div>
   <div class="form-group">
      <%= f.label :slug, class: "col-md-2 control-label" %>
      <div class="col-md-10">
         <%= f.text_field :slug, class: "form-control" %>
      </div>
   </div>

    <div class="form-group">
    	<div class="col-md-2">
    	 <%= f.label "Save as Template", class: "control-label" %>
    	</div>
     
      <div class="col-md-1">
         <%= f.check_box :template_id, class: "form-control" %>
      </div>
   </div>  
   <!--
   <div class="form-group">
      <%= f.label :default_language, class: "col-md-2 control-label" %>
      <div class="col-sm-10">
         <%= f.select :default_language, [['english','english'],['chinese','chinese']],{  }, 
         { class: "form-control" } %>
      </div>
   </div> -->
   <div class="form-group">
      <%= f.label :description, class: "col-md-2 control-label" %>
      <div class="col-md-10">
         <%= f.text_area :description, class: "form-control" %>
      </div>
   </div>
   <div class="form-group">
      <%= f.label :client_logo, class: "col-md-2 control-label" %>
      <div class="col-sm-10">
         <% if @microsite.client_logo.present? %>
         <%= image_tag @microsite.client_logo.url %><br/>
         <% end %>
         <%= f.file_field :client_logo %>
      </div>
   </div>
   <div class="form-group">
      <%= f.label :background_color, class: "col-md-2 control-label" %>
      <div class="col-sm-10">
         <%= f.text_field :background_color, :class=> "bgcolor" %>
      </div>
   </div>

   <div class="form-group">
      <%= f.label :background_image, class: "col-md-2 control-label" %>
      <div class="col-sm-10">
         <%= f.file_field :background_image %>
      </div>
   </div>

   <div class="form-group m-b-0">
      <div class="col-sm-offset-3 col-sm-9">
         <%= f.submit "Save", :class=> "btn btn-info waves-effect waves-light" %> 
      </div>
   </div>
   <% end %>
</div>
<!-- panel-body -->

