<p id="notice"><%= notice %></p>

<h1><%= t(:LISTING_SURVEY_GROUPS) %></h1>

<table>
  <thead>
    <tr>
      <th><%= t(:survey) %></th>
      <th><%= t(:Group) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @survey_groups.each do |survey_group| %>
      <tr>
        <td><%= survey_group.survey_id %></td>
        <td><%= survey_group.group_id %></td>
        <td><%= link_to t(:show), survey_group %></td>
        <td><%= link_to t(:edit), edit_survey_group_path(survey_group) %></td>
        <td><%= link_to t(:destroy), survey_group, method: :delete, data: { confirm: t(:ARE_YOU_SURE) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

