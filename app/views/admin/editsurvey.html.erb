				<label for="projecttitle" id="title-label">What would you like to name this Survey (Pick a good one!)</label>
			</div>
			<div class="control-input">
		<%=  text_field_tag(:name, @survey.name, :placeholder => 'Example:  Survey') %>					 
			</div>
	 </div>
 
	 <div class="thank-page-block">

	 	<div class="page-title-block">

		 	<%= label_tag(:thank_page_title, 'Thank Page Title') %>

		 	<%=  text_field_tag(:thank_page_title, @survey.thank_page_title, :placeholder => 'Example: My Test Page') %>
