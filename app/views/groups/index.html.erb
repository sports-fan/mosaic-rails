

<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= t(:MANAGE_GROUPS) %>
            <% if current_user.can? :create, :group  %> 
            <span class="pull-right"> 
                 <%= link_to 'create a new group', new_group_path %>
           </span>
           <% end %>
        </h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <p id="notice"><%= notice %></p>
          <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="table-responsive">
              <table class="table">
                <thead>
                  <tr>
                    <th width="30%"><%= t(:NAME) %></th>
                    <th width="60%"><%= t(:DESCRIPTION) %></th>
                    <th colspan="2"></th>
                  </tr>
                </thead>
                <tbody>
                  <% @groups.each do |group| %>
                  <tr>
                    <td><%= group.name %></td>
                    <td><%= group.description %></td>
                    <td>
                      <%= link_to group do %>
                        <i class="fa fa-edit"></i>
                      <% end %>
                    </td>
                    <td>
                      <%= link_to group, method: :delete, data: { confirm: t(:ARE_YOU_SURE) } do %>
                        <i class="fa fa-remove"></i>
                      <% end %>
                    </td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- End row -->

