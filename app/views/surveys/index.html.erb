<p id="notice"><%= notice %></p>

<h1><%= t(:LISTING_SURVEYS) %></h1>

<table>
  <thead>
    <tr>
      <th><%= t(:NAME) %></th>
      <th><%= t(:DESCRIPTION) %></th>
      <th><%= t(:STATUS) %></th>
      <th><%= t(:USER) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @surveys.each do |survey| %>
      <tr>
        <td><%= survey.name %></td>
        <td><%= survey.description %></td>
        <td><%= survey.status %></td>
        <td><%= survey.user_id %></td>
        <td><%= link_to t(:show), survey %></td>
        <td><%= link_to t(:edit), edit_survey_path(survey) %></td>
        <td><%= link_to t(:destroy), survey, method: :delete, data: { confirm: t(:ARE_YOU_SURE) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Survey', new_survey_path %>
