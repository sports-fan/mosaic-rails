<div class="microsite-wrapper">

	<div class="clent-section">
	<label>Your are assigning Mirosites to The 
	client: <%= @client.name %>  </label>
	</div>
	<div class="form-wrapper">
		<%= form_for(@client, :url=>"/client/#{@client.id}") do |f| %>	
		<%= hidden_field_tag(:task, "assign-microsites-to-client" ) %>
			<div class="search-morosite">
			  <label><%= t("Search the Microsites Assign to Client") %></label>
			  <%= autocomplete_field_tag "microsites[]", "", autocomplete_microsite_title_microsites_path,
			  'data-delimiter' => ',', :multiple => true %>
			</div>
			<div class="submitbtn">
			    <%= button_tag("Save", 
			      data: { 
			      disable_with: "Please Wait...",
			      confirm: "Are Sure?" }, class:"msiteuser") %>
			</div>
		<% end %>
	</div>
	<label>Following Microsites exists in the system</label>
	<ul>
		<% @microsites.each do |m| %>
		<li><%= m.title %></li>
		<% end %>
	</ul>
</div>