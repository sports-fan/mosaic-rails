<div class="panel-body">
  <p id="notice"><%= notice %></p>
  <%= form_for @tableau_user, html: { multipart: true, class: "form-horizontal"} do |f| %>
  <% if @tableau_user.errors.any? %>
  <div id="error_explanation">
    <h5><%= pluralize(@tableau_user.errors.count, "error") %> <%= t(:PROHIBITED_SAVING_TABLEAU_USERNAME) %>:</h5>
    <ul>
      <% @tableau_user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <div class="form-group">
    <%= f.label :username, class: "col-md-2 control-label" %>
    <div class="col-md-10">
      <%= f.text_field :username  , class: "form-control" %>
    </div>
  </div>
  <div class="form-group m-b-0">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit t(:Save) , :class=> "btn btn-info waves-effect waves-light" %> 
    </div>
  </div>
  <% end %>
</div>
<!-- panel-body -->

