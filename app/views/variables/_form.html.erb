<div class="panel-body">
  <p id="notice"><%= notice %></p>
  <%= form_for @variable, html: { multipart: true, class: "form-horizontal"} do |f| %>
  <% if @variable.errors.any? %>
  <div id="error_explanation">
    <h5><%= pluralize(@variable.errors.count, "error") %> <%= t(:PROHIBITED_SAVING_VARIABLE) %>:</h5>
    <ul>
      <% @variable.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <div class="form-group">
    <%= f.label :name, class: "col-md-2 control-label" %>
    <div class="col-md-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :vtype, class: "col-md-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :vtype, variable_type_collection, {}, {class: "form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :identifier, class: "col-md-2 control-label" %>
    <div class="col-md-10">
      <%= f.text_field :identifier, class: "form-control" %>
    </div>
  </div>
  <div class="form-group m-b-0">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit t(:Save) , :class=> "btn btn-info waves-effect waves-light" %> 
    </div>
  </div>
  <% end %>
</div>
<!-- panel-body -->

