<div class="f4-block fields-option" >

	<div class="options-adv">
		<div class="row">
				<div class="col-md-6">
					<h4>Multiple Choice Options</h4>
				</div>
		</div>
	</div>

	<%#= section %>
	<%#= @question  %>	 

	<div class="questions-add-option">
		<ul> 
		 
			<li data-id="1">

				<%= text_area_tag('qoption[1]','', :placeholder => 'Option 1')  %>
			</li>

			<li data-id="2">
				<%= text_area_tag('qoption[2]','', :placeholder => 'Option 2',
				'data-id'=>1)  %>
			</li>					

		</ul>


	</div>

	<div class="answer-grid-footer">

		<span class="add-option-textbox">
				<a class="add-option-button" 
				data-options-add-btn="" onclick="add_more_questions()" 
				href="javascript:void(0);">
				<i class="icon-plus text-muted"></i> Click to Add Option</a>
		</span>

	</div>	

	<!-- *********************8 -->

	<div class="col-md-4 hidden-xs advisor-column">	
		<div class="alert alert-info advisor">
			<div class="advisor-header">
				<a data-alertid="question-RADIO-radio" class="js-close-advice pull-right" type="button"><i class="icon-remove"></i></a>
				<i class="icon-info-sign"></i> 
				<strong>Getting Started Guide</strong> 
			</div>
			<div class="advisor-text">
				<p>Checkboxes allow multiple selections per question. If you only want to allow for one selection, use Radio Buttons or the  Dropdown Menu instead.<br><br> like "All of the Above", or "Other with a Checkbox" are easy to add.</p>
				</div>
			</div>
		</div>
		<div class="clearfix"></div>

	</div>

	<!-- ************************ -->

</div>