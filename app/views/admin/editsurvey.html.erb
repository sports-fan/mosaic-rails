<div class="add_new_survey">

 
 <div class="create-new-servey" 
 id="addsurvey-pop-1">

 <% if @survey!=nil %>
    <div id="error_explanation">
      <h2>
      	<% if @survey.errors.count >0 %> 
      	<%= pluralize(@survey.errors.count, "error") %> prohibited this survey from being saved:</h2>
      	<% end %>
      <ul>
