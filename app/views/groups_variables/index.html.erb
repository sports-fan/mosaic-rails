<p id="notice"><%= notice %></p>

<h1>Listing Groups Variables</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @group_variables.each do |group_variable| %>
      <tr>
        <td><%= link_to 'Show', group_variable_path(group_variable.group, group_variable) %></td>
        <td><%= link_to 'Edit', edit_group_variable_path(group_variable.group, group_variable) %></td>
        <td><%= link_to 'Destroy', group_variable_path(group_variable.group, group_variable), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Groups variable', new_group_variable_path(params[:group_id]) %>
